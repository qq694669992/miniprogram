.search-view {
  display: flex;
  flex-direction: row;
  padding: 14rpx 30rpx;
  box-shadow: 0 0 50rpx rgba(7,7,7,.1);
}
.search-input-view {
  box-sizing: border-box;
  width: 600rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: #F3F3F3;
  padding: 0rpx 20rpx;
  color: #B6B6B6;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
}
.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
  margin-top: 14rpx;
  vertical-align: middle;
}
.search-input {
  vertical-align: middle;
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  margin-top: 5rpx;
}
.search-btn {
  flex: 1;
  text-align: right;
  color: #FF6700;
  font-size: 32rpx;
  line-height: 60rpx;
}
.search-record-view {
  padding: 60rpx 30rpx;
}
.search-history-head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.search-history-title {
  font-size: 32rpx;
  color: #000000;
  font-weight: bolder;
}
.search-clear-btn {
  font-size: 26rpx;
  color: #999999;
}
.search-history-content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 10rpx;
}
.search-history-text {
  border: 1rpx solid #C6C6C6;
  border-radius: 26rpx;
  margin-right: 20rpx;
  padding: 13rpx 20rpx;
  font-size: 28rpx;
  color: #666666;
  margin-top: 20rpx;
}
.hot-search {
  margin-top: 90rpx;
}
.hot-search-content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 10rpx;
}
.hot-search-text {
  border: 1rpx solid #C6C6C6;
  border-radius: 26rpx;
  margin-right: 20rpx;
  padding: 13rpx 20rpx;
  font-size: 28rpx;
  color: #666666;
  margin-top: 20rpx;
}
