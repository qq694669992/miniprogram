.index-page {
  padding: 0 30rpx;
  background: #FFFFFF;
}
.banner-title {
  display: flex;
  flex: row;
}
.banner-text {
  font-size: 34rpx;
}
.null {
  flex: 1;
}
.banner-btn {
  font-size: 26rpx;
  color: #999999;
  line-height: 52rpx;
}
.banner_view {
  height: 300rpx;
  margin-top: 28rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.banner-view {
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.banner-img {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  overflow: hidden;
  will-change: transform;
}
.index-content {
  margin-top: 40rpx;
}
.content-title {
  display: flex;
  flex: row;
}
.floor-view {
  margin-top: 30rpx;
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
}
.bg-view {
  width: 690rpx;
  height: 452rpx;
  position: relative;
  top: 0;
  left: 0;
}
.bg-view image {
  width: 100%;
  height: 100%;
}
.goods-view {
  width: 660rpx;
  height: 432rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: absolute;
  top: 10rpx;
  left: 15rpx;
}
.goods-img-view {
  width: 100%;
  height: 300rpx;
}
.goods-img {
  width: 100%;
  height: 100%;
}
.goods-content {
  padding: 10rpx 30rpx 0 30rpx;
  background: #fefefe;
}
.goods-msg {
  display: flex;
  flex-direction: row;
}
.goods-name {
  font-size: 30rpx;
  color: #333333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.goods-price {
  flex: 1;
  font-size: 34rpx;
  color: #F7622E;
}
.people-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 12rpx;
  vertical-align: middle;
}
.people-see {
  font-size: 26rpx;
  color: #777777;
  vertical-align: middle;
}
.address-icon {
  width: 22rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 16rpx;
}
.goods-address text {
  font-size: 26rpx;
  color: #777777;
  vertical-align: middle;
}